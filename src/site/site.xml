<project xmlns="http://maven.apache.org/DECORATION/1.6.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/DECORATION/1.6.0 http://maven.apache.org/xsd/decoration-1.6.0.xsd">
	<skin>
		<groupId>lt.velykis.maven.skins</groupId>
		<artifactId>reflow-maven-skin</artifactId>
		<version>1.1.1</version>
	</skin>
	<custom>
		<reflowSkin>
			<theme>bootswatch-cosmo</theme>
			<absoluteResourceURL>http://www.deventropy.org/</absoluteResourceURL>
			<smoothScroll>true</smoothScroll>
			<highlightJs>true</highlightJs>
			<highlightJsTheme>github</highlightJsTheme>
			<brand>
				<!-- Brand text in top-left part of the site -->
				<name>
			          <![CDATA[
			          <span class="color-highlight">Dev</span>elopment <span class="color-highlight">Entropy</span>
			          ]]>
				</name>
				<href>http://www.deventropy.org/</href>
			</brand>
			<slogan>Random software experiments</slogan>
			<titleTemplate>%2$s | %1$s</titleTemplate>
			<!-- Use Table of Contents at the side of the page (max 6 elements) -->
			<toc>sidebar</toc>
			<tocTopMax>6</tocTopMax>
			<!-- Include the documentation and tools in the top navigation (in addition to links) -->
			<topNav>Projects|Development</topNav>
			<!-- Split menus in the bottom navigation -->
			<bottomNav maxSpan="9">
				<column>Main|Projects</column>
				<column>Development|Legal</column>
			</bottomNav>
			<bottomDescription>
		        <![CDATA[
		          <span class="color-highlight">Development Entropy</span> or <em>deventropy</em> is a playground for
		          software projects. These mostly obscure projects are either things that have been helpful to me at
		          some point and hopefully help someone else; or these are projects that explore ideas I've had.
		        ]]>
        	</bottomDescription>
		</reflowSkin>
	</custom>
    
	<bannerLeft>
		<name><![CDATA[<span class="color-highlight">Dev</span>elopment <span class="color-highlight">Entropy</span>]]></name>
		<href>./</href>
	</bannerLeft>
	<publishDate position="bottom" format="dd MMM yyyy" />
	<version position="bottom" />
	
	<body>
		<head>
			<link rel="author" href="http://blog.bindul.name/"/>
			<meta name="description" content="Development Entropy software projects" />
		</head>
		
		<links>
			<item name="Deventropy @ GitHub" href="https://github.com/deventropy/" />
		</links>
		
		<breadcrumbs>
			<item name="Deventropy" href="/" />
		</breadcrumbs>
		
		<menu name="Main" inherit="top">
			<item name="Home" href="./" />
			<item name="GitHub project" href="https://github.com/deventropy/" />
		</menu>
		<menu name="Projects" inherit="top">
			<item name="JUnit Helper" href="junit-helper/" />
			<item name="Script Packager" href="script-packager/" />
			<item name="Shared Utils" href="shared-utils/" />
			<item name="Site Skins" href="site-skins/"/>
			<item name="Maven Parent" href="https://github.com/deventropy/deventropy-parent" />
			<item name="Infix" href="http://infix.deventropy.org" />
		</menu>
		<menu name="Development" inherit="bottom">
			<item name="Development Guide" href="./development.html" />
			<item name="Code Quality / Continuous Integration" href="#">
				<item name="CI - Travis" href="https://travis-ci.org/deventropy/" />
				<item name="CI - Appveyor" href="https://ci.appveyor.com/projects" />
				<item name="Coveralls" href="https://coveralls.io/github/deventropy/" />
				<item name="Codacy" href="https://www.codacy.com/app/deventropy" />
				<item name="Coverity Scan" href="https://scan.coverity.com/" />
				<item name="VersionEye" href="https://www.versioneye.com/organisations/deventropy/projects" />
			</item>
			<item name="JFrog Bintray" href="https://dl.bintray.com/deventropy/repository" />
			<item name="Mailing Lists" href="https://sourceforge.net/p/deventropy/lists/" />
		</menu>
		<menu name="Legal" inherit="bottom">
			<item name="Privacy Policy" href="privacy.html"/>
		</menu>
	</body>
</project>
